*
  box-sizing: border-box
p
  font-size: 24px

html, body
  margin: 0
  height: 100%

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight: 300
  &.done
    text-align: center


pink = #F25E92

.wrap
  margin: 20px

#text
  color: pink
  h1
    margin-top: 0px

.drag
  background-color: lightness(pink, 95%)
  border: dashed 6px pink

  .wrap
    margin-top: 14px

  #text
    color: pink

.drag > .wrap
  margin: 14px


#quote
  color: red
